{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) versioning=(?<versioning>\\S+)\\nARG \\w+=\"(?<currentValue>[^\"]+)\""
      ],
      "matchStringsStrategy": "multi-line"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "regex"
      ],
      "matchPaths": [
        "Dockerfile"
      ],
      "groupName": "dockerfile dependencies"
    }
  ]
}
